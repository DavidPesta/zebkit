{
    "layout": { "@zebkit.layout.StackLayout" : [] },
    "kids"  : [{
        "@zebkit.ui.Panel":[],
        "layout" : { "@zebkit.layout.BorderLayout" :4 },
        "padding": 4,
        "border" : "plain",
        "kids"   : {
            "top": {
                "@zebkit.ui.BoldLabel": "Simple application",
                "padding"            : 4
            },
            "center": { "@zebkit.ui.TextArea": "" },
            "bottom": {
                "@zebkit.ui.Button": "Clear",
                "canHaveFocus" : false
            }
       }
    }],

    "#actions" : [{
        "source"   : "//zebkit.ui.Button",
        "condition": {
            "canHaveFocus" : true
        },

        "fire" : {
            "event" : "CleanMyPc",
            "target": "*",
            "args"  : [

            ]
        },

        "target"   : {
            "path"   : "//zebkit.ui.TextArea",
            "update" : { "value": "" },
            "condition" : [
                {  "propertyName" : "propertyValue", "$op": "eq" },
                "OR",
                {  "name" : "<name>", "op": "eq", "value"  },
            ]
        }
    }]
}
